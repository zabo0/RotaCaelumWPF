<Window x:Class="RotaCaelum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:wpf1="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        xmlns:viewmodels="clr-namespace:RotaCaelum.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:ViewModelTelemetry}"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        MinHeight="920"
        MinWidth="1500"
        Closing="OnWindowClosing">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="250" />
            <RowDefinition />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--logo-->
        <Border Margin="4,4,4,2"
                Grid.Column="0"
                Grid.Row="0"
                CornerRadius="10"
                BorderBrush="Black"
                BorderThickness="1,1,1,1">
            <Border.Background>
                <ImageBrush Stretch="Uniform"
                            ImageSource="/Artboard 1.png" />
            </Border.Background>
        </Border>


        <!--start-->
        <Border Grid.Row="1"
                Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="10"
                Margin="4,2,4,4">

            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition />
                    <RowDefinition Height="2*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Content="START"
                        Name="button_start"
                        Background="LIME"
                        FontSize="16"
                        IsEnabled="False"
                        Margin="0,0,2,0"
                        Click="StartButtonClicked" />


                <Grid Grid.Column="1"
                      Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Content="01.01.2024"
                           FontSize="16"
                           Grid.Row="0"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Padding="0,0,0,0" />

                    <Label Content="00:00"
                           FontSize="16"
                           Grid.Row="1"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Padding="0,0,0,0" />

                </Grid>

                <Label Content="00:00:00"
                       Grid.Row="1"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontSize="28" />

                <Label Content="00:00:00"
                       Grid.Row="2"
                       Grid.Column="0"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontSize="18"
                       Padding="0" />

                <Label Content="00:00:00"
                       Grid.Row="2"
                       Grid.Column="1"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontSize="18"
                       Padding="0" />

                <Button Content="MANUAL DEPLOY 1"
                        Grid.Column="0"
                        Grid.Row="3"
                        Background="Red"
                        FontSize="14"
                        Foreground="White"
                        Margin="0,0,2,0"
                        Click="ManuelDeploy_1Clicked" />

                <Button Content="MANUAL DEPLOY 2"
                        Grid.Column="1"
                        Grid.Row="3"
                        Background="Red"
                        FontSize="14"
                        Foreground="White"
                        Margin="0,0,2,0"
                        Click="ManuelDeploy_2Clicked" />

                <CheckBox Content="EMERGENCY RESCUE MODE"
                          x:Name="checkBox_EMERGENCY_RESCUE_MODE"
                          Grid.Column="0"
                          Grid.Row="4"
                          IsChecked="True"
                          VerticalAlignment="Center"
                          Grid.ColumnSpan="2" />

            </Grid>

        </Border>

        <!--configs-->
        <Border Margin="4,2,4,4"
                Padding="4"
                Grid.Column="0"
                Name="border_configs"
                Grid.Row="2"
                Grid.RowSpan="3"
                CornerRadius="10"
                BorderBrush="Black"
                BorderThickness="1,1,1,1">

            <ScrollViewer VerticalScrollBarVisibility="Hidden">

                <StackPanel Margin="4"
                            CanVerticallyScroll="True"
                            ScrollViewer.CanContentScroll="True">

                    <!--save data-->
                    <GroupBox Header="Save Data"
                              Name="groupBox_saveData"
                              FontSize="10"
                              Foreground="#CC000000"
                              Height="76">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="28*" />
                                <ColumnDefinition Width="70*" />
                                <ColumnDefinition Width="131*" />
                                <ColumnDefinition Width="33*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0"
                                   Grid.Row="0"
                                   Padding="0"
                                   Content="Save Location"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"
                                   Grid.ColumnSpan="2" />

                            <TextBox Grid.Column="1"
                                     Margin="70,4,0,4"
                                     IsReadOnly="True"
                                     Name="textBox_saveLocation"
                                     Grid.Row="0"
                                     Text="Select location"
                                     MaxLines="1"
                                     VerticalContentAlignment="Center"
                                     TextChanged="saveDataFilePathTextChanged"
                                     Grid.ColumnSpan="2" />

                            <Button Grid.Column="3"
                                    Margin="5,5,5,5"
                                    Content="..."
                                    Grid.Row="0"
                                    Click="saveLocation_Clicked" />

                            <CheckBox Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      Name="checkBox_dontSaveData"
                                      Grid.Row="1"
                                      Content="Don't Save Data"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center" />



                        </Grid>


                    </GroupBox>

                    <!--com port config-->
                    <GroupBox Height="181"
                              Header="COM Port Config"
                              IsEnabled="false"
                              Name="groupBox_comPortConfigs"
                              FontSize="10"
                              Foreground="#CC000000">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="2*" />
                                <RowDefinition />
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="3*" />
                            </Grid.RowDefinitions>


                            <Label Padding="0,0,0,0"
                                   Content="Com Port"
                                   Grid.Column="0"
                                   Grid.Row="0"
                                   VerticalContentAlignment="Center"
                                   FontSize="14" />

                            <Label Padding="0,0,0,0"
                                   Content="Baud Rate"
                                   Grid.Column="0"
                                   Grid.Row="1"
                                   VerticalContentAlignment="Center"
                                   FontSize="14" />

                            <ComboBox Grid.Column="1"
                                      Name="comboBox_comPort"
                                      Margin="5"
                                      Grid.Row="0" />

                            <ComboBox Grid.Column="1"
                                      Margin="5"
                                      Name="comboBox_baudRate"
                                      Grid.Row="1" />

                            <Button Grid.Column="3"
                                    Name="button_refreshComPorts"
                                    Grid.Row="0"
                                    Margin="3"
                                    Click="button_refreshComPorts_Click">
                                <Button.Background>
                                    <ImageBrush Stretch="Uniform"
                                                ImageSource="/refresh.png" />
                                </Button.Background>
                            </Button>

                            <ProgressBar Name="progressBar_comPortSearch"
                                         Grid.Column="0"
                                         Minimum="0"
                                         Maximum="100"
                                         Value="100"
                                         Visibility="Collapsed"
                                         Margin="0,5,0,5"
                                         Grid.Row="2" />

                            <Label Grid.Column="1"
                                   Grid.Row="2"
                                   Padding="0"
                                   Content="No Connection"
                                   HorizontalContentAlignment="Right"
                                   FontSize="9"
                                   VerticalContentAlignment="Center"
                                   Margin="0,0,5,0" />

                            <RichTextBox Grid.Column="0"
                                         Grid.Row="3"
                                         IsReadOnly="True"
                                         Grid.ColumnSpan="3" />

                            <Button Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Background="Lime"
                                    Name="button_openComPort"
                                    Content="Open Port"
                                    FontSize="14"
                                    Grid.Row="4"
                                    Margin="0,4,0,0"
                                    Click="openComportButton_clicked" />


                        </Grid>



                    </GroupBox>

                    

                    <!--first deploymen-->
                    <GroupBox Header="1. Deployment"
                              Name="groupBox_firstDeploy"
                              FontSize="10"
                              IsEnabled="False"
                              Foreground="#CC000000"
                              Height="150">


                        <StackPanel>

                            <Label Content="Sequences"
                                   Grid.Column="0"
                                   Grid.Row="0"
                                   FontSize="12"
                                   Padding="0"
                                   VerticalContentAlignment="Center" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <!--<ColumnDefinition Width="50"/>-->
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Checked="CheckBoxChanged"
                                          Unchecked="CheckBoxChanged"
                                          Name="checkBox_firsDeploymentPitchAngle"
                                          FontSize="14"
                                          Content="Pitch Angle"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         PreviewTextInput="NumberValidationTextBox"
                                         Name="textBox_firsDeploymentPitchAngle"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4"
                                         IsEnabled="False" />

                                <!--<Button Grid.Column="2"
                                        Name="button_apply_firstDeployment_pitchAngle"
                                        Content="Apply"
                                        Margin="4,4,0,4"/>-->
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          Checked="CheckBoxChanged"
                                          Unchecked="CheckBoxChanged"
                                          Name="checkBox_firstDeploymentVelocity"
                                          Content="Velocity"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         IsEnabled="False"
                                         FontSize="14"
                                         PreviewTextInput="NumberValidationTextBox"
                                         Name="textBox_firstDeploymentVelocity"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          Checked="CheckBoxChanged"
                                          Unchecked="CheckBoxChanged"
                                          Content="Altitude"
                                          x:Name="checkBox_firstDeploymentAltitude"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         Name="textBox_firstDeploymentAltitude"
                                         FontSize="14"
                                         IsEnabled="False"
                                         PreviewTextInput="NumberValidationTextBox"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          x:Name="checkBox_firstDeploymentApogee"
                                          Content="Apogee"
                                          VerticalContentAlignment="Center"
                                          Margin="0,4,0,4" />
                            </Grid>

                            <!--<Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="1"
                                        FontSize="14"
                                        IsEnabled="False"
                                        Name="button_aplyFirstDeployment"
                                        Click="aplyFirstDeploymentConfig"
                                        Height="35"
                                        Content="Apply" />
                            </Grid>-->
                        </StackPanel>


                    </GroupBox>

                    <!--second deployment-->
                    <GroupBox Header="2. Deployment"
                              Name="groupBox_secondDeploy"
                              FontSize="10"
                              IsEnabled="False"
                              Foreground="#CC000000"
                              Height="150">


                        <StackPanel>

                            <Label Content="Sequences"
                                   Grid.Column="0"
                                   Grid.Row="0"
                                   FontSize="12"
                                   Padding="0"
                                   VerticalContentAlignment="Center" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          Checked="CheckBoxChanged"
                                          Unchecked="CheckBoxChanged"
                                          Name="checkBox_secondDeploymentPitchAngle"
                                          Content="Pitch Angle"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         Name="textBox_secondDeploymentPitchAngle"
                                         MaxLines="1"
                                         IsEnabled="False"
                                         PreviewTextInput="NumberValidationTextBox"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          Checked="CheckBoxChanged"
                                          Unchecked="CheckBoxChanged"
                                          Name="checkBox_secondDeploymentVelocity"
                                          Content="Velocity"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         FontSize="14"
                                         IsEnabled="False"
                                         PreviewTextInput="NumberValidationTextBox"
                                         Name="textBox_secondDeploymentVelocity"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          Checked="CheckBoxChanged"
                                          Unchecked="CheckBoxChanged"
                                          Name="checkBox_secondDeploymentAltitude"
                                          Content="Altitude"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         FontSize="14"
                                         IsEnabled="False"
                                         PreviewTextInput="NumberValidationTextBox"
                                         Name="textBox_secondDeploymentAltitude"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          x:Name="checkBox_dontUseSecondDeployment"
                                          Content="Don't use second deployment"
                                          VerticalContentAlignment="Center"
                                          Margin="0,4,0,4" />
                            </Grid>

                            <!--<Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Don't use"
                                          Grid.Column="0"
                                          FontSize="14"
                                          Name="checkBox_dontUseSecondDeployment"
                                          VerticalContentAlignment="Bottom" />

                                <Button Grid.Column="1"
                                        FontSize="14"
                                        Click="aplySecondDeploymentConfig"
                                        Height="35"
                                        Name="button_aplySeconDeployment"
                                        IsEnabled="False"
                                        Content="Apply" />
                            </Grid>-->
                        </StackPanel>


                    </GroupBox>

                    <Button Content="Apply Deployment Configs"
                            Name="button_applyDeploymentConfig"
                            Margin="6"
                            IsEnabled="False"
                            Height="38"
                            FontSize="12"
                            Click="applyDeploymentConfigs" />


                    <!--settings-->

                    <GroupBox Header="Settings"
                              Name="groupBox_settings"
                              FontSize="10"
                              Foreground="#CC000000"
                              Height="83">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>

                            <RadioButton Content="ft"
                                         Grid.Column="0"
                                         Grid.Row="0"
                                         FontSize="14"
                                         VerticalContentAlignment="Center" />
                            <RadioButton Content="m"
                                         Grid.Column="1"
                                         Grid.Row="0"
                                         FontSize="14"
                                         IsChecked="True"
                                         VerticalContentAlignment="Center" />

                            <Button Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Content="Start Simulation Mode"
                                    Grid.Row="2"
                                    Margin="0,4,0,0"
                                    FontSize="12" />
                        </Grid>


                    </GroupBox>

                </StackPanel>

            </ScrollViewer>
        </Border>


        <!--datavisualize-->
        <Border Grid.Column="1"
                Grid.Row="0"
                Grid.RowSpan="3"
                Margin="2,4,4,2"
                BorderBrush="Black">


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45*" />
                    <ColumnDefinition Width="55*" />
                </Grid.ColumnDefinitions>

                <!--map-->
                <Border CornerRadius="10"
                        Grid.Column="0"
                        Grid.Row="0"
                        Padding="4"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Grid.RowSpan="2">

                    <Grid x:Name="mapPlace">

                        <wpf1:MapControl x:Name="mapControl"
                                         VerticalAlignment="Stretch"
                                         HorizontalAlignment="Stretch" />

                    </Grid>
                    

                </Border>

                <!--charts-->
                <Border Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="10"
                        Margin="4,0,0,0"
                        Padding="4"
                        Grid.Row="0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>


                        <lvc:CartesianChart Series="{Binding srCollectionPressure_mini}"
                                            DisableAnimations="True"
                                            LegendLocation="Bottom"
                                            Margin="0,0,2,0"
                                            Hoverable="False"
                                            x:Name="pressureChart"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="0"
                                            Grid.Row="0">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionAltitude_mini}"
                                            DisableAnimations="True"
                                            LegendLocation="Bottom"
                                            Hoverable="False"
                                            Margin="2,0,2,0"
                                            x:Name="altitudeChart"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="1"
                                            Grid.Row="0">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionVelocity_mini}"
                                            DisableAnimations="True"
                                            LegendLocation="Bottom"
                                            Hoverable="False"
                                            Margin="2,0,0,0"
                                            x:Name="velocityChart"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="2"
                                            Grid.Row="0">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionTemperature_mini}"
                                            DisableAnimations="True"
                                            LegendLocation="Bottom"
                                            Hoverable="False"
                                            Margin="0,0,2,0"
                                            x:Name="temperatureChart"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="0"
                                            Grid.Row="1">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionGyro_mini}"
                                            DisableAnimations="True"
                                            LegendLocation="Bottom"
                                            Hoverable="False"
                                            Margin="2,0,2,0"
                                            x:Name="gyroChart"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="1"
                                            Grid.Row="1">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionAccel_mini}"
                                            DisableAnimations="True"
                                            LegendLocation="Bottom"
                                            Hoverable="False"
                                            x:Name="accelChart"
                                            Margin="2,0,0,0"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="2"
                                            Grid.Row="1">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>



                    </Grid>



                </Border>

                <!--expandChart-->
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="10"
                        Margin="4,4,0,0"
                        Padding="4"
                        Grid.Row="1"
                        Grid.Column="1">

                    <Grid x:Name="expandedPlace">


                        
                    </Grid>

                </Border>


                <!--<ScottPlot:WpfPlot x:Name="pressure"
                                   Grid.Column="1"
                                   Grid.Row="1"/>-->


            </Grid>


        </Border>

        <!--telemetry-->
        <Border Grid.Column="1"
                Grid.Row="3"
                Margin="2,2,4,4"
                CornerRadius="10"
                BorderThickness="1,1,1,1"
                BorderBrush="Black">

            <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Hidden"
                          PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">

                <StackPanel Orientation="Horizontal"
                            ScrollViewer.CanContentScroll="True"
                            HorizontalAlignment="Left"
                            Height="193"
                            VerticalAlignment="Top">

                    <GroupBox Width="250"
                              Header="Base"
                              Margin="4"
                              FontSize="10"
                              Foreground="#CC000000">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <Label Content="Pressure (Pa)"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       FontSize="15"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"></Label>
                                <Label Content="{Binding pressure}"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       FontSize="15"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"></Label>

                                <Label Content="Altitude (ft)"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       FontSize="15"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"></Label>
