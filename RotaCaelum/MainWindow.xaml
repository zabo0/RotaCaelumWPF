                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionTemperature_mini}"
