                                            x:Name="temperatureChart"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="0"
                                            Grid.Row="1">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionGyro_mini}"
