                                   Grid.Row="0"
                                   FontSize="12"
                                   Padding="0"
                                   VerticalContentAlignment="Center" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          Content="Pitch Angle"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          Content="Velocity"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          FontSize="14"
                                          IsChecked="True"
                                          Content="Altitude"
                                          VerticalContentAlignment="Center" />

                                <TextBox Grid.Column="1"
                                         MaxLines="1"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Margin="0,4,0,4" />
                            </Grid>



                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Don't use"
                                          Grid.Column="0"
                                          FontSize="14"
                                          VerticalContentAlignment="Bottom" />

                                <Button Grid.Column="1"
                                        FontSize="14"
                                        Height="35"
                                        Content="Apply" />
                            </Grid>
                        </StackPanel>


                    </GroupBox>

                    <!--settings-->

                    <GroupBox Header="Settings"
                              Name="groupBox_settings"
                              FontSize="10"
                              Foreground="#CC000000"
                              Height="83">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>

                            <RadioButton Content="ft"
                                         Grid.Column="0"
                                         Grid.Row="0"
                                         FontSize="14"
                                         VerticalContentAlignment="Center" />
                            <RadioButton Content="m"
                                         Grid.Column="1"
                                         Grid.Row="0"
                                         FontSize="14"
                                         IsChecked="True"
                                         VerticalContentAlignment="Center" />

                            <Button Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Content="Start Simulation Mode"
                                    Grid.Row="2"
                                    Margin="0,4,0,0"
                                    FontSize="12" />
                        </Grid>


                    </GroupBox>

                </StackPanel>

            </ScrollViewer>
