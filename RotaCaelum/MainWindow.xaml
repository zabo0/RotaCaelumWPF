                                            x:Name="gyroChart"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="1"
                                            Grid.Row="1">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        <lvc:CartesianChart Series="{Binding srCollectionAccel_mini}"
                                            DisableAnimations="True"
                                            LegendLocation="Bottom"
                                            Hoverable="False"
                                            x:Name="accelChart"
                                            Margin="2,0,0,0"
                                            MouseLeftButtonDown="expandChart"
                                            DataTooltip="{x:Null}"
                                            Grid.Column="2"
                                            Grid.Row="1">
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="true"
                                          Position="LeftBottom"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>


